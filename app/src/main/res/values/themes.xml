<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MobileNewsApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_primary</item>
        <item name="colorOnPrimary">@color/dark_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorSecondaryVariant">@color/light_secondary</item>
        <item name="colorOnSecondary">@color/dark_accent</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@color/light_primary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.MobileNewsApp" parent="Base.Theme.MobileNewsApp" />

